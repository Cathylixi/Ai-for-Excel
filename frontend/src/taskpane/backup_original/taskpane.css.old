/* 文件上传界面样式 */
.upload-section, .analysis-section {
    width: 100%;
    max-width: none;
    margin: 15px auto;
    padding: 20px;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    background-color: #fafafa;
    box-sizing: border-box;
}

.upload-section h3, .analysis-section h3 {
    margin-top: 0;
    margin-bottom: 15px;
    color: #333;
    text-align: left;
}

/* 上传区域 */
.upload-area {
    width: 100%;
    margin: 15px 0;
    border: 2px dashed #0078d7;
    border-radius: 8px;
    padding: 40px 20px;
    text-align: center;
    background-color: #f8f9fa;
    transition: all 0.3s ease;
    cursor: pointer;
    box-sizing: border-box;
    min-height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.upload-area:hover,
.upload-area.dragover {
    border-color: #005a9e;
    background-color: #e6f2ff;
}

.upload-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
}

.upload-icon {
    color: #0078d7;
    margin-bottom: 10px;
}

.upload-content h4 {
    margin: 5px 0;
    color: #333;
}

.upload-content p {
    margin: 5px 0;
    color: #666;
}

/* 上传进度 */
.upload-progress {
    width: 100%;
    text-align: center;
    padding: 30px 20px;
    background-color: #f5f5f5;
    border-radius: 8px;
    margin: 15px 0;
}

.ms-Spinner {
    display: inline-block;
    margin-bottom: 15px;
}

.ms-Spinner-circle {
    width: 40px;
    height: 40px;
    border: 3px solid #f0f0f0;
    border-top: 3px solid #0078d7;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* 上传结果 */
.upload-result {
    margin: 15px 0;
    padding: 15px;
    border: 1px solid #d4edda;
    border-radius: 6px;
    background-color: #d4edda;
}

/* 文件信息 */
.file-info {
    display: flex;
    align-items: center;
    padding: 12px;
    background-color: white;
    border-radius: 6px;
    border: 1px solid #e0e0e0;
    margin-bottom: 10px;
    width: 100%;
    box-sizing: border-box;
}

.file-icon {
    color: #0078d7;
    margin-right: 15px;
}

.file-details {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.file-name {
    font-weight: 500;
    color: #333;
    margin-bottom: 3px;
}

.file-status {
    font-size: 14px;
    color: #28a745;
}

.file-size {
    font-size: 12px;
    color: #666;
}

.file-actions {
    margin-left: 10px;
}

/* 文件列表 */
.files-list {
    margin-top: 15px;
    max-height: 200px;
    overflow-y: auto;
}

.file-item {
    margin-bottom: 5px;
}

.file-item:last-child {
    margin-bottom: 0;
}

/* 操作按钮 */
.action-buttons {
    display: flex;
    gap: 10px;
    margin-top: 20px;
    justify-content: center;
    flex-wrap: wrap;
    width: 100%;
}

.ms-Button--small {
    padding: 5px 10px;
    font-size: 12px;
}

/* 状态消息 */
.status-message {
    width: 100%;
    margin-top: 15px;
    padding: 12px;
    border-radius: 6px;
    text-align: center;
    display: none;
    font-weight: 500;
}

.status-message.success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
    display: block;
}

.status-message.error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
    display: block;
}

.status-message.info {
    background-color: #d6eaf8;
    color: #1d4ed8;
    border: 1px solid #bee5eb;
    display: block;
}

/* 拖拽状态 */
.upload-area.dragover {
    border-color: #005a9e;
    background-color: #e6f2ff;
    transform: scale(1.02);
}

/* 响应式设计 */
@media (max-width: 600px) {
    .ms-welcome__main {
        padding: 5px 15px;
    }
    
    .upload-section, .analysis-section {
        margin: 10px auto;
        padding: 15px;
    }
    
    .upload-area {
        padding: 30px 15px;
        min-height: 100px;
    }
    
    .action-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .action-buttons .ms-Button {
        width: 100%;
        max-width: 200px;
    }
    
    .file-info {
        flex-direction: column;
        align-items: flex-start;
    }
    
    .file-actions {
        margin-left: 0;
        margin-top: 10px;
        align-self: flex-end;
    }
    
    /* Chat responsive design */
    .chat-container {
        height: calc(100vh - 100px);
        min-height: 350px;
    }
    
    .wizard-page[data-step="1"] .chat-container {
        min-height: calc(100vh - 80px);
    }
    
    .ai-message .message-content,
    .user-message .message-content {
        max-width: calc(100% - 40px);
        margin-left: 10px;
        margin-right: 10px;
    }
}

@media (max-width: 400px) {
    .upload-area {
        padding: 25px 10px;
        min-height: 80px;
    }
    
    .upload-content h4 {
        font-size: 14px;
    }
    
    .upload-content p {
        font-size: 12px;
    }
    
    /* Very small screen chat adjustments */
    .chat-container {
        height: calc(100vh - 80px);
        min-height: 300px;
    }
    
    .wizard-page[data-step="1"] .chat-container {
        min-height: calc(100vh - 60px);
    }
    
    .ai-message .message-content,
    .user-message .message-content {
        max-width: calc(100% - 20px);
        margin-left: 5px;
        margin-right: 5px;
        font-size: 13px;
        padding: 10px 12px;
    }
}

/* ChatGPT-style Chat Interface */
.chat-container {
    display: flex;
    flex-direction: column;
    height: calc(100vh - 120px);
    min-height: 400px;
    border: 1px solid #e1e1e1;
    border-radius: 12px;
    background: white;
    overflow: hidden;
    margin: 15px 0;
}

/* AI Assistant页面专用样式 - 全屏模式 */
.wizard-page[data-step="1"] {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.wizard-page[data-step="1"] h3 {
    margin: 0 0 10px 0;
    flex-shrink: 0;
}

.wizard-page[data-step="1"] .chat-container {
    flex: 1;
    height: auto;
    margin: 0;
    min-height: calc(100vh - 100px);
}

.chat-messages {
    flex: 1;
    overflow-y: auto;
    padding: 20px;
    background: #fafafa;
}

.message {
    margin-bottom: 15px;
    animation: fadeIn 0.3s ease-in;
    display: flex;
    flex-direction: column;
}

.ai-message {
    align-items: flex-start;
}

.user-message {
    align-items: flex-end;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}

.ai-message .message-content {
    background: #f0f0f0;
    border: 1px solid #d1d1d1;
    border-radius: 18px 18px 18px 4px;
    padding: 12px 16px;
    margin-right: 60px;
    color: #333;
    line-height: 1.4;
    max-width: calc(100% - 80px);
    word-wrap: break-word;
    overflow-wrap: break-word;
    display: inline-block;
    width: fit-content;
    min-width: 80px;
}

.user-message .message-content {
    background: #0078d7;
    border-radius: 18px 18px 4px 18px;
    padding: 12px 16px;
    color: white;
    text-align: right;
    line-height: 1.4;
    max-width: calc(100% - 80px);
    word-wrap: break-word;
    overflow-wrap: break-word;
    display: inline-block;
    width: fit-content;
    min-width: 80px;
    margin-right: 20px;
}

.chat-input-area {
    border-top: 1px solid #e1e1e1;
    padding: 15px 20px;
    background: white;
}

.input-group {
    display: flex;
    gap: 10px;
    align-items: center;
}

.chat-input {
    flex: 1;
    border: 1px solid #d1d1d1;
    border-radius: 25px;
    padding: 12px 18px;
    font-size: 14px;
    outline: none;
    transition: border-color 0.2s;
}

.chat-input:focus {
    border-color: #0078d7;
    box-shadow: 0 0 0 1px #0078d7;
}

.chat-send-btn {
    background: #0078d7;
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    color: white;
    cursor: pointer;
    transition: background-color 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
}

.chat-send-btn:hover {
    background: #005a9e;
}

.chat-send-btn:disabled {
    background: #cccccc;
    cursor: not-allowed;
}

/* 打字动画 */
.typing-dots span {
    animation: typingAnimation 1.4s infinite;
}

.typing-dots span:nth-child(2) {
    animation-delay: 0.2s;
}

.typing-dots span:nth-child(3) {
    animation-delay: 0.4s;
}

.typing-dots span:nth-child(4) {
    animation-delay: 0.6s;
}

@keyframes typingAnimation {
    0%, 60%, 100% {
        opacity: 0.4;
    }
    30% {
        opacity: 1;
    }
}

/* 按钮悬停效果 */
.ms-Button:hover {
    background-color: #f3f2f1;
}

.ms-Button--primary:hover {
    background-color: #005a9e;
}

/* 文件删除按钮 */
.remove-file-btn {
    background-color: transparent;
    border: 1px solid #dc3545;
    color: #dc3545;
    padding: 4px 8px;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.2s;
}

.remove-file-btn:hover {
    background-color: #dc3545;
    color: white;
}

/* Project Selection Section */
.project-selection-section {
    width: 100%;
    max-width: none;
    margin: 15px auto;
    padding: 20px;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    background-color: #f9f9f9;
    box-sizing: border-box;
}

.project-selection-section h3 {
    margin-top: 0;
    margin-bottom: 10px;
    color: #333;
    text-align: left;
}

.project-selection-section p {
    margin-bottom: 15px;
    color: #666;
    font-size: 14px;
}

.project-options {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.project-option {
    display: flex;
    align-items: flex-start;
    padding: 12px;
    background-color: white;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    transition: all 0.2s ease;
    cursor: pointer;
}

.project-option:hover {
    border-color: #0078d7;
    box-shadow: 0 2px 4px rgba(0, 120, 215, 0.1);
    background-color: #fafbff;
}

.ms-CheckBox-input {
    margin: 0;
    margin-right: 12px;
    margin-top: 2px;
    width: 16px;
    height: 16px;
    cursor: pointer;
}

.ms-CheckBox-label {
    display: flex;
    align-items: flex-start;
    cursor: pointer;
    width: 100%;
    margin: 0;
    font-weight: normal;
}

.ms-CheckBox-text {
    color: #333;
    font-size: 14px;
    line-height: 1.4;
    margin-left: 0;
}

.project-option:hover .ms-CheckBox-text {
    color: #0078d7;
}

/* 选中状态样式 */
.project-option input[type="checkbox"]:checked + label .ms-CheckBox-text {
    color: #0078d7;
    font-weight: 500;
}

.project-option input[type="checkbox"]:checked {
    accent-color: #0078d7;
}

/* 响应式设计 - 项目选择部分 */
@media (max-width: 600px) {
    .project-selection-section {
        margin: 10px auto;
        padding: 15px;
    }
    
    .project-option {
        padding: 10px;
    }
    
    .ms-CheckBox-text {
        font-size: 13px;
    }
}

@media (max-width: 400px) {
    .project-option {
        padding: 8px;
    }
    
    .ms-CheckBox-text {
        font-size: 12px;
    }
}

/* SDTM Analysis Results Section */
.sdtm-analysis-section {
    width: 100%;
    max-width: none;
    margin: 15px auto;
    padding: 20px;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    background-color: #f0f8ff;
    box-sizing: border-box;
}

.sdtm-analysis-section h3 {
    margin-top: 0;
    margin-bottom: 15px;
    color: #333;
    text-align: left;
}

.sdtm-summary {
    background-color: white;
    border-radius: 6px;
    padding: 15px;
    margin-bottom: 15px;
    border: 1px solid #d0e7ff;
}

.summary-stats {
    display: flex;
    gap: 20px;
    margin-bottom: 15px;
    flex-wrap: wrap;
}

.stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10px;
    background-color: #f8f9fa;
    border-radius: 4px;
    min-width: 120px;
}

.stat-label {
    font-size: 12px;
    color: #666;
    margin-bottom: 5px;
}

.stat-value {
    font-size: 20px;
    font-weight: 600;
    color: #0078d7;
}

.domain-list {
    border-top: 1px solid #e0e0e0;
    padding-top: 15px;
}

.domain-label {
    font-size: 14px;
    color: #333;
    font-weight: 500;
    display: block;
    margin-bottom: 8px;
}

.domain-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
}

.domain-tag {
    background-color: #0078d7;
    color: white;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 500;
}

.sdtm-status {
    background-color: #fff3cd;
    border: 1px solid #ffeaa7;
    border-radius: 6px;
    padding: 12px;
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 8px;
}

.sdtm-status.success {
    background-color: #d4edda;
    border-color: #c3e6cb;
    color: #155724;
}

.sdtm-status.error {
    background-color: #f8d7da;
    border-color: #f5c6cb;
    color: #721c24;
}

/* Main mappings container - NEW LAYOUT */
.sdtm-mappings-container {
    background-color: white;
    border-radius: 6px;
    padding: 15px;
    border: 1px solid #d0e7ff;
    margin-bottom: 15px;
}

.mappings-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    padding-bottom: 10px;
    border-bottom: 1px solid #e0e0e0;
}

.mappings-header h4 {
    margin: 0;
    color: #333;
}

.mappings-actions {
    display: flex;
    gap: 8px;
}

/* Left-Right Layout */
.procedure-domain-layout {
    display: flex;
    gap: 20px;
    min-height: 200px;
}

.procedures-column,
.domains-column {
    flex: 1;
    background-color: #f8f9fa;
    border-radius: 6px;
    padding: 15px;
    border: 1px solid #e0e0e0;
}

.column-header {
    margin: 0 0 15px 0;
    font-size: 14px;
    font-weight: 600;
    color: #333;
    padding-bottom: 8px;
    border-bottom: 2px solid #0078d7;
}

.procedures-list,
.domains-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

/* Procedure items */
.procedure-item {
    background-color: white;
    border-radius: 4px;
    padding: 10px;
    border: 1px solid #d0d7de;
    cursor: pointer;
    transition: all 0.2s ease;
}

.procedure-item:hover {
    border-color: #0078d7;
    box-shadow: 0 2px 4px rgba(0, 120, 215, 0.1);
}

.procedure-item.selected {
    border-color: #0078d7;
    background-color: #f0f8ff;
}

.procedure-text {
    font-size: 13px;
    color: #333;
    font-weight: 500;
}

/* Domain items corresponding to selected procedure */
.domain-item {
    background-color: white;
    border-radius: 4px;
    padding: 10px;
    border: 1px solid #d0d7de;
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    align-items: center;
}

.domain-tag-editable {
    background-color: #e6f3ff;
    color: #0078d7;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: 500;
    border: 1px solid #b3d9ff;
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 4px;
}

.domain-tag-editable.editable {
    padding-right: 20px;
}

.domain-tag-editable .remove-domain {
    color: #d73a49;
    cursor: pointer;
    font-weight: bold;
    font-size: 12px;
    display: none;
}

.domain-tag-editable.editable .remove-domain {
    display: inline;
}

.domain-input {
    flex: 1;
    border: 1px solid #d0d7de;
    border-radius: 4px;
    padding: 4px 8px;
    font-size: 12px;
    min-width: 100px;
}

.domain-input:focus {
    border-color: #0078d7;
    outline: none;
    box-shadow: 0 0 0 1px #0078d7;
}

.add-domain-btn {
    background-color: #e6f3ff;
    color: #0078d7;
    border: 1px dashed #0078d7;
    border-radius: 12px;
    padding: 4px 8px;
    font-size: 11px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 4px;
}

.add-domain-btn:hover {
    background-color: #d0e7ff;
}

/* Edit mode actions */
.edit-mode-actions {
    margin-top: 15px;
    display: flex;
    gap: 10px;
    justify-content: center;
}

/* Confirmation status */
.confirmation-status {
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
    border-radius: 6px;
    padding: 12px;
    margin-top: 15px;
    display: flex;
    align-items: center;
    gap: 8px;
    color: #155724;
}

.confirmation-status .ms-Icon {
    color: #28a745;
}

/* OLD MAPPINGS STYLES - Keep for backward compatibility */
.sdtm-mappings {
    background-color: white;
    border-radius: 6px;
    padding: 15px;
    border: 1px solid #d0e7ff;
}

.sdtm-mappings h4 {
    margin-top: 0;
    margin-bottom: 15px;
    color: #333;
}

.mappings-list {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.mapping-item {
    display: flex;
    align-items: center;
    padding: 10px;
    background-color: #f8f9fa;
    border-radius: 4px;
    border-left: 3px solid #0078d7;
}

.procedure-name {
    flex: 1;
    font-weight: 500;
    color: #333;
    margin-right: 15px;
}

.domain-mappings {
    display: flex;
    gap: 4px;
    flex-wrap: wrap;
}

.domain-mappings .domain-tag {
    background-color: #28a745;
    font-size: 11px;
}

.sdtm-actions {
    text-align: center;
    margin-top: 15px;
}

/* 响应式设计 - SDTM分析部分 */
@media (max-width: 600px) {
    .sdtm-analysis-section {
        margin: 10px auto;
        padding: 15px;
    }
    
    .summary-stats {
        flex-direction: column;
        gap: 10px;
    }
    
    .stat-item {
        min-width: 100%;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
    
    .stat-value {
        font-size: 16px;
    }
    
    .mapping-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
    }
    
    .procedure-name {
        margin-right: 0;
        margin-bottom: 5px;
    }
}

@media (max-width: 400px) {
    .domain-tags {
        justify-content: center;
    }
    
    .domain-tag {
        font-size: 10px;
        padding: 3px 6px;
    }
}

/* === 新增：平铺式SDTM映射样式 === */

/* 域概览样式 */
.domains-overview {
    margin-top: 10px;
    padding: 8px 0;
}

.domains-list-overview {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 5px;
}

.domain-overview-tag {
    background-color: #e6f3ff;
    color: #0078d7;
    padding: 2px 6px;
    border-radius: 8px;
    font-size: 10px;
    font-weight: 500;
    border: 1px solid #b3d9ff;
}

/* 平铺式映射列表 */
.flat-mappings-list {
    background-color: #fafbfc;
    border-radius: 6px;
    padding: 12px;
    border: 1px solid #d0d7de;
    max-height: 400px;
    overflow-y: auto;
}

/* 每一行映射 */
.mapping-row {
    display: flex;
    align-items: flex-start;
    padding: 10px;
    margin-bottom: 8px;
    background-color: white;
    border-radius: 4px;
    border: 1px solid #e1e8ed;
    transition: all 0.2s ease;
}

.mapping-row:hover {
    border-color: #0078d7;
    box-shadow: 0 2px 4px rgba(0, 120, 215, 0.1);
}

.mapping-row:last-child {
    margin-bottom: 0;
}

/* Procedure名称列 */
.procedure-name {
    flex: 0 0 45%;
    padding-right: 15px;
    font-size: 13px;
    font-weight: 500;
    color: #333;
    line-height: 1.4;
    word-wrap: break-word;
}

/* Domain标签区域 */
.domains-area {
    flex: 1;
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    align-items: center;
    min-height: 28px;
}

/* 可编辑的Domain标签 */
.editable-domain-tag {
    background-color: #e6f3ff;
    color: #0078d7;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: 500;
    border: 1px solid #b3d9ff;
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 4px;
    cursor: text;
    min-width: 30px;
    transition: all 0.2s ease;
}

.editable-domain-tag:hover {
    background-color: #d0e7ff;
    border-color: #0078d7;
}

.editable-domain-tag.editing {
    background-color: white;
    border-color: #0078d7;
    box-shadow: 0 0 0 2px rgba(0, 120, 215, 0.3);
    outline: none;
}

.editable-domain-tag[contenteditable="true"]:focus {
    background-color: white;
    border-color: #0078d7;
    box-shadow: 0 0 0 2px rgba(0, 120, 215, 0.3);
    outline: none;
}

/* 删除按钮 */
.remove-domain-btn {
    color: #d73a49;
    cursor: pointer;
    font-weight: bold;
    font-size: 12px;
    margin-left: 4px;
    opacity: 0;
    transition: opacity 0.2s ease;
}

.mapping-row.edit-mode .remove-domain-btn,
.editable-domain-tag:hover .remove-domain-btn {
    opacity: 1;
}

.remove-domain-btn:hover {
    color: #cb2431;
    background-color: rgba(211, 58, 73, 0.1);
    border-radius: 50%;
    width: 16px;
    height: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 2px;
}

/* 添加Domain按钮 */
.add-domain-btn {
    background-color: #f6f8fa;
    color: #0078d7;
    border: 1px dashed #0078d7;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 11px;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 2px;
    opacity: 0;
    transition: all 0.2s ease;
}

.mapping-row.edit-mode .add-domain-btn {
    opacity: 1;
}

.add-domain-btn:hover {
    background-color: #e6f3ff;
    border-color: #0078d7;
    color: #005a9e;
}

/* 编辑模式样式 */
.flat-mappings-list.edit-mode .mapping-row {
    border-color: #0078d7;
    background-color: #fafbff;
}

.flat-mappings-list.edit-mode .procedure-name {
    color: #005a9e;
    font-weight: 600;
}

/* 🔥 动态输入框样式 */
.count-input-container {
    margin-top: 8px;
    margin-left: 24px; /* 与checkbox对齐 */
    padding: 8px 12px;
    background-color: #f8f9fa;
    border-radius: 4px;
    border: 1px solid #e1e5e9;
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 13px;
    animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.count-label {
    color: #323130;
    font-weight: 500;
    white-space: nowrap;
}

.count-input {
    width: 80px;
    padding: 4px 8px;
    border: 1px solid #d2d0ce;
    border-radius: 2px;
    font-size: 13px;
    text-align: center;
    background-color: white;
}

.count-input:focus {
    outline: none;
    border-color: #0078d7;
    box-shadow: 0 0 0 1px #0078d7;
}

.count-suffix {
    color: #605e5c;
    font-style: italic;
}

/* 项目选择保存按钮样式 */
/* 🔥 自动保存提示区域 */
.auto-save-section {
    margin-top: 20px;
    padding-top: 15px;
    border-top: 1px solid #e1e5e9;
    text-align: center;
}

.auto-save-hint {
    margin: 0;
    font-size: 12px;
    color: #605e5c;
    text-align: center;
    font-style: italic;
}

.wizard-page { display: none; }
.wizard-page[data-step="1"] { display: block; }
.wizard-nav { margin-top: 12px; display: flex; justify-content: space-between; }
.wizard-nav .ms-Button { min-width: 90px; }

.start-modal { position: fixed; inset: 0; background: rgba(0,0,0,0.35); display:none; align-items:center; justify-content:center; z-index: 9999; }
.start-modal-content { background:#fff; padding:20px; border-radius:10px; width: 420px; box-shadow: 0 10px 30px rgba(0,0,0,0.25); }
#start-modal-title { margin: 0 0 6px 0; font-size: 18px; }
#start-modal-desc { margin: 0 0 10px 0; color:#555; }
#incomplete-list { max-height: 260px; overflow:auto; margin: 8px 0 12px 0; border:1px solid #eee; padding:8px; border-radius: 8px; }
#incomplete-list .item { padding:10px 12px; border:1px solid #eee; border-radius:8px; cursor:pointer; margin-bottom:8px; background:#fafafa; transition: all .15s ease; display:flex; gap:10px; align-items:flex-start; }
#incomplete-list .item:hover { background:#f3f8ff; border-color:#cfe3ff; }
#incomplete-list .item.selected { background:#e7f0ff; border-color:#7cb2ff; }
#incomplete-list .check { width:18px; height:18px; border:2px solid #bbb; border-radius:50%; margin-top:2px; flex: 0 0 auto; background:#fff; }
#incomplete-list .item.selected .check { border-color:#4a90e2; background: radial-gradient(#4a90e2 60%, transparent 61%); }
#incomplete-list .info { flex:1 1 auto; }
#incomplete-list .title { font-weight:600; color:#222; margin-bottom:2px; }
#incomplete-list .subtitle { font-size:12px; color:#555; margin-bottom:2px; }
#incomplete-list .meta { font-size:11px; color:#888; }

.start-modal-actions { display:flex; justify-content: flex-end; gap: 8px; }
#continue-selected-btn[disabled] { opacity: 0.5; pointer-events: none; }

/* Completion Confirmation Page Styles */
.completion-confirmation-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 40px 20px;
    min-height: 400px;
    background: linear-gradient(135deg, #f8fffe 0%, #f0f8ff 100%);
    border-radius: 12px;
    border: 1px solid #e1e8ed;
}

.completion-icon {
    margin-bottom: 20px;
    animation: bounceIn 0.6s ease-out;
}

@keyframes bounceIn {
    0% { transform: scale(0.3); opacity: 0; }
    50% { transform: scale(1.05); }
    70% { transform: scale(0.9); }
    100% { transform: scale(1); opacity: 1; }
}

.completion-title {
    color: #28a745;
    font-size: 24px;
    font-weight: 600;
    margin: 0 0 20px 0;
    animation: fadeInUp 0.8s ease-out 0.2s both;
}

.completion-message {
    margin-bottom: 30px;
    animation: fadeInUp 0.8s ease-out 0.4s both;
}

.completion-message p {
    font-size: 16px;
    line-height: 1.6;
    color: #333;
    margin: 8px 0;
}

.completion-message p:first-child {
    font-size: 18px;
    font-weight: 500;
    color: #28a745;
}

.completion-summary {
    background: white;
    border-radius: 8px;
    padding: 20px;
    border: 1px solid #e1e8ed;
    max-width: 400px;
    width: 100%;
    animation: fadeInUp 0.8s ease-out 0.6s both;
}

.completion-summary h4 {
    margin: 0 0 15px 0;
    color: #333;
    font-size: 16px;
    font-weight: 600;
}

.completion-summary ul {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
}

.completion-summary li {
    margin: 8px 0;
    color: #555;
    font-size: 14px;
    line-height: 1.4;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive design for completion page */
@media (max-width: 600px) {
    .completion-confirmation-section {
        padding: 30px 15px;
        min-height: 350px;
    }
    
    .completion-title {
        font-size: 20px;
    }
    
    .completion-message p:first-child {
        font-size: 16px;
    }
    
    .completion-summary {
        padding: 15px;
    }
}

@media (max-width: 400px) {
    .completion-confirmation-section {
        padding: 20px 10px;
        min-height: 300px;
    }
    
    .completion-title {
        font-size: 18px;
    }
    
    .completion-message p {
        font-size: 14px;
    }
}